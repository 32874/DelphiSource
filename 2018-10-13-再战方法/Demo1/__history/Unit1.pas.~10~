unit Unit1;

interface
  type
    TAnimal = class
    public
      procedure Talk;
      {虚拟方法}
      function Run:Integer;virtual;
      {类方法}
      class procedure Eat();
    end;

    TDog = class(TAnimal)
    public
      function Run:Integer;
    end;
implementation

{ TPerson }

class procedure TAnimal.Eat;
begin

end;

function TAnimal.Run: Integer;
begin
{一般情况下，父类的虚拟方法会有一个空实现}
end;

procedure TAnimal.Talk;
begin
  Writeln('Talk');
end;

procedure TDog.Run;
begin
  Writeln('TDog.Run');
end;

end.
