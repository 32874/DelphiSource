procedure ForDemo();
var
  i: Integer;
begin
  //for循环的标准写法
  for i := 1 to 10 do
  begin
    Writeln(i);
  end;
  Writeln('-------------',i);
  for i := 10 downto 1 do
  begin
    Writeln(i);
  end;
  Writeln('-------------',i);

end;

{*------------------------------------------------------------------------------
  求1-100所有整数的和 1+2+3+4..+100=5050
-------------------------------------------------------------------------------}
procedure Sum();
var
  i,SumNum: Integer;
begin
  SumNum:= 0;
  Writeln('SumNum初始值:',SumNum);
  for i := 1 to 100 do
  begin
    Writeln('第',i,'个数:',i);
    SumNum:= SumNum + i;
    Writeln('SumNum+i=',SumNum);
  end;
end;

{打印1-100之间所有是7的倍数的整数的个数及总和(体会设置计数器的思想)}
procedure Counter();
var
  i, SumNum, Count: Integer;
begin
  SumNum:= 0;
  Count:= 0;
  for i := 1 to 100 do
  begin
    if i mod 7 = 0 then
    begin
      Writeln(i);
      Inc(Count);
      SumNum:= SumNum + i;
    end;
  end;
  Writeln('个数:',Count,' 总和:',SumNum);
end;

{输出所有的水仙花数,所谓水仙花数是指一个3位数,其各个位上数字立方和等于其本身}
procedure NarcissisticNumber();
var
  i: Integer;
  geWei: Integer;
  shiWei: Integer;
  baiWei: Integer;
  count: Integer;

begin
  count:= 0;
  for i := 100 to 999 do
  begin
    geWei:= i mod 100 mod 10;
    shiWei:= i mod 100 div 10;
    baiWei:= i div 100;
    if geWei*geWei*geWei + shiWei*shiWei*shiWei + baiWei*baiWei*baiWei = i then
    begin
      Inc(count);
      Writeln('第',count,'个水仙花数:',i);
    end;
  end;
  Writeln('共有',count,'个水仙花数');
end;

