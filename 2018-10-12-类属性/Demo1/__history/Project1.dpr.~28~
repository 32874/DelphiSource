uses
  System.SysUtils,
  UTools in 'UTools.pas';
var
  Person: TPerson;
begin
//  Writeln(Name);
//  Writeln(Age);
  Person:= TPerson.Create;
  Writeln(Person.Name);
  Person.Age:=18;
  Writeln(Person.Age);
  FreeAndNil(Person);
  Readln;
end.
